#!/usr/bin/env bash
set -euo pipefail

if [ -f "$HOME/.cargo/env" ]; then
  . "$HOME/.cargo/env"
fi

# Fallback for non-login shells where cargo env is not loaded.
if ! command -v cargo >/dev/null 2>&1; then
  export PATH="$HOME/.cargo/bin:$PATH"
fi

if ! command -v cargo >/dev/null 2>&1; then
  echo "[pre-commit] cargo not found. Install Rust or expose cargo in PATH." >&2
  exit 127
fi

echo "[pre-commit] cargo fmt --all -- --check"
cargo fmt --all -- --check

echo "[pre-commit] cargo clippy --all-targets --all-features -- -D warnings"
cargo clippy --all-targets --all-features -- -D warnings
